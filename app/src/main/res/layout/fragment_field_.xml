<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fieldRoot"
    tools:context="com.example.swatloaner.coachme.Field_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <com.example.swatloaner.coachme.MyCanvas
    android:background="@drawable/soccerpitch"
    android:id="@+id/soccerField"
    android:layout_height="match_parent"
    android:layout_width="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/whereThingsGo">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:id="@+id/popupList"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/allLayout"
            >
            <ListView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="9"
                android:id="@+id/listViewField">
            </ListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Team"
                    android:id="@+id/teamPick"/>
                <Button
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Opponent"
                    android:id="@+id/opponentPick"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:id="@+id/vert"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TableLayout
            android:layout_width="220px"
            android:layout_height="220px"
            android:layout_gravity="end"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:id="@+id/eraser"
                    android:background="@drawable/undo"
                    android:visibility="invisible"
                    />
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:id="@+id/draw"
                    android:visibility="invisible"
                    android:background="@drawable/pencil"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:id="@+id/clear"
                    android:visibility="invisible"
                    android:background="@drawable/trashcan"
                    />
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="end"
                    android:id="@+id/pallet"
                    android:background="@drawable/pallet"
                    />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</FrameLayout>
