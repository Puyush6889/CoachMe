<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swatloaner.coachme.Field_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <com.example.swatloaner.coachme.MyCanvas
    android:background="@drawable/soccerpitch"
    android:id="@+id/soccerField"
    android:layout_height="match_parent"
    android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:id="@+id/vert"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TableLayout
            android:layout_width="220px"
            android:layout_height="220px"
            android:layout_gravity="end"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:id="@+id/eraser"
                    android:background="@drawable/undo"
                    android:visibility="invisible"
                    />
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:id="@+id/draw"
                    android:visibility="invisible"
                    android:background="@drawable/pencil"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:id="@+id/clear"
                    android:visibility="invisible"
                    android:background="@drawable/trashcan"
                    />
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="end"
                    android:id="@+id/pallet"
                    android:background="@drawable/pallet"
                    />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</FrameLayout>
